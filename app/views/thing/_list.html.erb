<% if main_thing %>
	
	<!-- main thing -->
	<%= render :partial => 'thing/show', :locals => { :thing => main_thing, :main_thing => nil, :country => @country } %><br/><br/>

	<!-- other things -->
	<% if other_things.length > 0 %>
		<% @i = 0 %>
		<% for other_thing in other_things %>
			<%= render :partial => 'thing/show', :locals => { :thing => other_thing, :main_thing => main_thing, :country => @country } %>
			<% @i += 1 %>
		<% end-%>
	<% else %>
		Oop.  No other items to compare against.
	<% end-%>
<% end-%>